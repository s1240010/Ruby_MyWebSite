    <%= form.label :phone_number %>
    <%= form.number_field :phone_number, id: :product_phone_number %>
  </div>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_area :title, id: :product_title %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, id: :product_description %>
  </div>

  <div class="field">
